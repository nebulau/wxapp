<!--pages/register/register.wxml-->
<image class='background' src="../../imgs/sky.jpg" mode="aspectFill"></image>
<view class='blank'></view>
<view class="user"><input placeholder="请输入账号" id='user' bindinput="bindUser" /></view>
<view class='user'>
<input password value="{{pwd}}" placeholder="请输入密码" bindinput="bindPwd" id='pwd' />
</view>
<view class='user'>
<input password value="{{pwd}}" placeholder="请再次输入密码" bindinput="bindPwdTwice" id='pwd' />
</view>
<view class="user"><input placeholder="请输入您的邮箱" id='user' bindinput="bindEmail" /></view>
<button class='btn' style='margin-top:100rpx;' bindtap='register'>注册</button>
