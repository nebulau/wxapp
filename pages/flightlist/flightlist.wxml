<!-- 
item {
  corp_name,
  flight_code,
  dep_time_plan,
  dep_time_act,
  dep_airp,
  arri_time_plan,
  arri_time_act,
  arri_airp,
  flight_status
}
 -->
<view wx:if="{{list}}">
  <view wx:for="{{list}}" wx:key="{{index}}">
      <view class='listitem'>
        <view class='partl'>
            <view class='corp'  data-index='{{index}}' bindtap='toDetail'>{{item.corp_name}} {{item.flight_code}}</view>

            <view class='info'>
              <view class='timeplace' style='width:40%;'>
                <text style='font-size:65rpx;'  data-index='{{index}}' bindtap='toDetail'>{{item.dep_time_plan}}</text>
                <text  data-index='{{index}}' bindtap='toDetail'>{{item.dep_airp}}</text>
              </view>
              <view class='status' style='width:20%;font-size:30rpx;'  data-index='{{index}}' bindtap='toDetail'>{{item.flight_status}}</view>
              <view class='timeplace' style='width:40%;'>
                <text style='font-size:65rpx;'  data-index='{{index}}' bindtap='toDetail'>{{item.arri_time_plan}}</text>
                <text  data-index='{{index}}' bindtap='toDetail'>{{item.arri_airp}}</text>
              </view>
            </view>
        </view>
        
        <view class='partr'><text data-flight='{{item.flight_code}}' bindtap='setFocus'>关注\n\n航班</text></view>

      </view>
  </view>
</view>
<view wx:else class='nofound'>
  <icon type="info" size="50"></icon>
  <text>请等待</text>
</view>

